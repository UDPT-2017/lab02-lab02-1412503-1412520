{{> user}}
<div class="col-md-8 col-sm-12 col-xs-12 mailbox-content  tab-content tab-content-in">
    <div class="tab-pane active text-style table-responsive " id="tab1">
	 	<div class="mailbox-border">
	               <div class="mail-toolbar clearfix">
				    <div class="float-left">
				        <div class="btn btn_1 btn-default mrg5R">
				           <i class="fa fa-refresh"> </i>
				        </div>
				        <div class="clearfix"> </div>
				    </div>
				    <div class="float-right">
	                       <div class="clearfix"> </div>
	                 </div>
	               </div>
		</div>

	    <table class=" table tab-border hover" id="inboxTable" cellspacing="0" width="100%">
	    	<thead>
	    		<tr>
	                <th>Sender</th>
	                <th>Content</th>
	                <th>Time</th>
            	</tr>
	    	</thead>
	        <tbody>
	        {{#each messages}}
	        	{{#if this.readtime}}
	        		 <tr class="table-row">
		                <td>
		                	{{this.sender}}
		                </td>
		                <td>
		                    {{this.content}}
		                </td>
		                <td>
		                    {{this.senttime}}
		                </td>
		            </tr>
	        	{{else}}
				 <tr class="table-row highlight">
	                <td>
	                	{{this.sender}}
	                </td>
	                <td>
	                    {{this.content}}
	                </td>
	                <td>
	                    {{this.senttime}}
	                </td>
	            </tr>
	            {{/if}}
	        {{/each}}
	        </tbody>
	    </table>




	</div>

	<div id="myModal" class="modal">
    <!-- Modal content -->
		<div class="modal-content">
		   <div class="modal-header">
		        <span class="close">&times;</span>
		        <h4 id ='recipent' ></h2>
		      </div>
		      <div class="modal-body">
		        <p id = 'content'></p>
		      </div>
		      <div class="modal-footer">
		        <h4 id = 'senttime'></h3>
		      </div>
		      <div class="modal-footer">
		        <h4 id = 'readtime'></h3>
		      </div>
		 </div>
  	</div>
</div>
<script type="text/javascript">
	$(document).ready(function(){
    $('#inboxTable').DataTable({
    	"lengthMenu": [[10, 12, 15, -1], [10, 12, 15, "All"]],
    	"paging": true,
    	"pagingType": "full_numbers"
    });
});
</script>
<script src="js/inbox.js"></script>
